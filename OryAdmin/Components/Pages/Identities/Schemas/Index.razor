@page "/identities/schemas"
@attribute [StreamRendering]
@attribute [RenderModeInteractiveServer]
@inject ICustomTranslator Translator
@inject ILogger<Home> Logger
@inject NavigationManager Navigation

<PageTitle>Identity Schemas</PageTitle>

<h1 class="title">Identity Schemas</h1>
@if (_isLoading)
{
    // is loading
    <p>Loading data...</p>
}
else
{
    foreach (var schema in _schemas)
    {
        <h3 class="subtitle">Schema: @schema.Id</h3>
        <pre class="is-small">
            <code>@schema.Schema</code>
        </pre>
    }
}