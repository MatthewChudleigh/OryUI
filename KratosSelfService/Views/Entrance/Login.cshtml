@model KratosLoginFlow
@{
    ViewData["Title"] = Translator.GetTranslation("SignIn");
}

<section class="hero has-background-white-ter is-fullheight">
    <div class="hero-body">
        <div class="container">
            <div class="columns is-centered">
                <div class="column is-7-tablet is-6-desktop is-5-widescreen">
                    <div class="box">
                        <h1 class="title has-text-centered">@Translator.GetTranslation("SignIn")</h1>
                        <p class="has-text-centered">
                            @Translator.GetTranslation("NoAccountYet")
                            <a href="registration">
                                @Translator.GetTranslation("SignUp")
                            </a>
                        </p>
                        <hr/>
                        <form method="@Model.Ui.Method.ToLower()" action="@Model.Ui.Action">
                            @if (Model.Ui.Messages != null)
                            {
                                foreach (var message in Model.Ui.Messages)
                                {
                                    @await Component.InvokeAsync("KratosUiTextMessage", message)
                                }
                            }
                            @foreach (var node in Model.Ui.Nodes)
                            {
                                @await Component.InvokeAsync("KratosUiNodeInput", node)
                            }
                            <div class="field separator mt-5">@Translator.GetTranslation("OrSignInWith")</div>
                            <div class="field">
                                <div class="columns is-mobile is-multiline">
                                    @for (var i = 0; i < 1; i++)
                                    {
                                        <div class="column is-one-third">
                                            <a class="button is-fullwidth">
                                                <span class="icon">
                                                    <i class="fab fa-google"></i>
                                                </span>
                                                <span>Google</span>
                                            </a>
                                        </div>
                                    }
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>