@page "/login"
@inject ICustomTranslator Translator
@inject ILogger<Login> Logger
@inject NavigationManager Navigation
@layout FullSizeLayout
@inject IHttpContextAccessor HttpContextAccessor

<PageTitle>@Translator.GetTranslation("SignIn")</PageTitle>

<section class="hero has-background-white-ter is-fullheight">
    <div class="hero-body">
        <div class="container">
            <div class="columns is-centered">
                <div class="column is-7-tablet is-6-desktop is-5-widescreen">
                    <div class="box">
                        <h1 class="title has-text-centered">@Translator.GetTranslation("SignIn")</h1>
                        <p class="has-text-centered">
                            @Translator.GetTranslation("NoAccountYet")
                            <a href="register">
                                @Translator.GetTranslation("SignUp")
                            </a>
                        </p>
                        <hr/>
                        @if (Flow == null)
                        {
                            <span class="loader"></span>
                        }
                        else
                        {
                            <form method="@Flow.Ui.Method.ToLower()" action="@Flow.Ui.Action">
                                @if (Flow.Ui.Messages != null)
                                {
                                    foreach (var message in Flow.Ui.Messages)
                                    {
                                        <KratosUiTextMessage Message="@message"/>
                                    }
                                }
                                @foreach (var node in Flow.Ui.Nodes)
                                {
                                    <KratosUiNodeInput Node="@node"/>
                                }
                                <div class="field separator mt-5">@Translator.GetTranslation("OrSignInWith")</div>
                                <div class="field is-grouped is-grouped-multiline">
                                    <div class="control">
                                        <a class="button">
                                            <span class="icon">
                                                <i class="fab fa-google"></i>
                                            </span>
                                            <span>Google</span>
                                        </a>
                                    </div>
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>